{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "types": ["https://deno.land/x/supabase@1.11.7/mod.ts"]
  },
  "fmt": {
    "files": {
      "include": ["**/*.ts"]
    },
    "options": {
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true
    }
  }
} 